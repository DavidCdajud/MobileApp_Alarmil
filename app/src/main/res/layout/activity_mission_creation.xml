<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="86dp"
        android:layout_height="106dp"
        android:src="@drawable/your_logo"
        android:contentDescription="Logo"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Título: Nueva misión -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva misión"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Campo Fecha inicio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Fecha inicio"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFechaInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_background"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="dd/mm/yyyy"
            android:textAlignment="viewStart"
            android:textColor="#ABABAB"
            android:textStyle="italic"
            tools:background="#FEFEFE" />

        <ImageButton
            android:id="@+id/btnFechaInicio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00B30707"
            android:contentDescription="Seleccionar fecha"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_calendar"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- Campo Hora inicio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Hora inicio"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHoraInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_background"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="hh:mm:ss"
            android:textAlignment="viewStart"
            android:textColor="#ABABAB"
            android:textStyle="italic"
            tools:background="#FEFEFE" />

        <ImageButton
            android:id="@+id/btnHoraInicio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00B30707"
            android:contentDescription="Seleccionar hora"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_clock"
            android:tint="@color/white" />
    </LinearLayout>

    <!-- Campo Fecha fin -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Fecha fin"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFechaFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_background"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="dd/mm/yyyy"
            android:textAlignment="viewStart"
            android:textColor="#ABABAB"
            android:textStyle="italic"
            tools:background="#FEFEFE" />

        <ImageButton
            android:id="@+id/btnFechaFin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00B30707"
            android:contentDescription="Seleccionar fecha"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_calendar"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- Campo Hora fin -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Hora fin"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHoraFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_background"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="hh:mm:ss"
            android:textAlignment="viewStart"
            android:textColor="#ABABAB"
            android:textStyle="italic"
            tools:background="#FEFEFE" />

        <ImageButton
            android:id="@+id/btnHoraFin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00B30707"
            android:contentDescription="Seleccionar hora"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_clock"
            android:tint="@color/white" />
    </LinearLayout>

    <!-- Botones Crear misión y Asociar equipo -->
    <Button
        android:id="@+id/btnCrearMision"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#F6F9FE"
        android:backgroundTint="#F6F9FE"
        android:fontFamily="@font/roboto"
        android:text="Crear misión"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F6F9FE"
        android:backgroundTint="#F6F9FE"
        android:fontFamily="@font/roboto"
        android:text="Asociar equipo"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</LinearLayout>
