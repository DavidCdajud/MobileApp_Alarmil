<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="86dp"
        android:layout_height="106dp"
        android:src="@drawable/your_logo"
        android:contentDescription="Logo"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/tvMisiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misiones"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
        android:elevation="4dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:background="@android:color/darker_gray"
            android:divider="@android:color/black"
        android:showDividers="middle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:divider="@android:color/black"
            android:showDividers="middle">

            <TextView
                android:text="ID"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="Fecha/hora inicio"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="Fecha/hora fin"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:divider="@android:color/black"
            android:showDividers="middle">

            <TextView
                android:text="M001"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="21-05-2025 23:00"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="21-05-2025 23:00"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:divider="@android:color/black"
            android:showDividers="middle">

            <TextView
                android:text="M002"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="21-05-2025 23:00"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="21-05-2025 23:00"
                android:padding="8dp"
                android:textColor="@android:color/black"/>
        </TableRow>

    </TableLayout>

</LinearLayout>


<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:layout_marginStart="8dp"
android:layout_marginEnd="8dp">

<ImageButton
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:contentDescription="Agregar Misión"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_add"
    android:tint="@color/white" />

<ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:contentDescription="Eliminar Misión"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_remove"
    android:tint="@color/white" />
</LinearLayout>

    </LinearLayout>

    <!-- Alarms Section -->
<TextView
android:id="@+id/tvAlarms"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Alarmas"
android:textSize="20sp"
android:textStyle="bold"
android:textColor="@android:color/white"
android:layout_marginBottom="30dp"/>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@android:color/darker_gray"
android:elevation="4dp"
android:padding="8dp">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:background="@android:color/darker_gray"
    android:divider="@android:color/black"
android:showDividers="middle">

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:divider="@android:color/black"
    android:showDividers="middle">

    <TextView
        android:text="ID"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="Hora"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="Misión"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:divider="@android:color/black"
    android:showDividers="middle">

    <TextView
        android:text="A001"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="17:00"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="M001"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:divider="@android:color/black"
    android:showDividers="middle">

    <TextView
        android:text="A002"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="23:55"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="M001"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
</TableRow>

</TableLayout>

    </LinearLayout>

    <!-- Botones de Acción (Agregar, Quitar) para Alarmas -->
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:layout_marginStart="8dp"
android:layout_marginEnd="8dp">

<ImageButton
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:contentDescription="Agregar Alarma"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_add"
    android:tint="@color/white" />

<ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:contentDescription="Eliminar Alarma"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_remove"
    android:tint="@color/white" />
</LinearLayout>

    </LinearLayout>

    <!-- Botones de Corazón y Actualización -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"
android:layout_marginTop="150dp">

<ImageButton
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="200dp"
    android:background="?android:attr/selectableItemBackground"
    android:contentDescription="Favorito"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_heart"
    android:tint="@color/white" />

<ImageButton
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:contentDescription="Actualizar"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_refresh"
    android:tint="@color/white" />

</LinearLayout>

    </LinearLayout>
