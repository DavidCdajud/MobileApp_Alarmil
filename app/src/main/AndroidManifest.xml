<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_alarmi_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_alarmi_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alamil"
        tools:targetApi="31">

        <!-- MainActivity como la actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Alamil">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SplashActivity que se puede invocar en transiciones -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Alamil" />

        <!-- HomeActivity que se carga después de la autenticación -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Alamil" />

        <activity android:name=".MissionCreationActivity"
            android:theme="@style/Theme.Alamil"/>

        <activity android:name=".HeartRateActivity"
            android:theme="@style/Theme.Alamil"/>

        <activity android:name=".AlarmCreationActivity"
            android:exported="true"
            android:label="Nueva misión" />

    </application>


</manifest>